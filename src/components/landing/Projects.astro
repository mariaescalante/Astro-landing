---
import {projects} from "../../config/projects.json";
---

<h2 class="text-5xl font-bold my-5">Projects</h2>
{
  projects.map((project) => (
    <div class="flex flex-col md:flex-row text-center md:text-left mb-2">
      <div class="flex-1 p-4">
        <h2 class="font-bold text-2xl my-4">{project.title}</h2>
        <p>{project.description}</p>
        <button class="bg-indigo-500 px-10 py-3 my-5 hover:bg-indigo-400">Más información</button>
      </div>
      <div class="flex-1">
        <img src="images/avatar.svg" class="w-72 m-auto" />
      </div>
    </div>
  ))
}